// from fastfetch github repo
{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "type": "file",
	"source": "$HOME/.config/fastfetch/logo",
        "padding": {
            "top": 1,
            "right": 2
        }
    },
    "display": {
        "separator": "┃ ",
        "color": "bright_",
        "constants": [
            "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━",
            "┃\u001b[86C┃\u001b[86D",
	    "━━━━━━━━━━━━━━┻━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
        ]
    },
    "modules": [
        {
            "format": "{#1}{#keys}┏{$1}┓\u001b[81D {#32}{user-name-colored} ┳ {#32}{host-name-colored} {#32}💻 {#1}",
            "type": "title"
        },
        {
            "key": "{$2}{#32}Distro       ",
            "type": "os"
        },
	{
            "key": "{$2}{#32}Device       ",
            "type": "host"
        },
        {
            "key": "{$2}{#32}Kernel       ",
            "type": "kernel"
        },
	{
            "key": "{$2}{#32}Processes    ",
            "type": "processes"
        },
	{
            "key": "{$2}{#32}Packages     ",
            "type": "packages"
        },
        {
            "key": "{$2}{#32}Shell        ",
            "type": "shell"
        },
	{
            "key": "{$2}{#32}Editor       ",
            "type": "editor"
        },
	{
            "key": "{$2}{#32}File Manager ",
            "type": "lm"
        },
	{
            "key": "{$2}{#32}WM           ",
            "type": "wm"
        },
	{
            "key": "{$2}{#32}Theme        ",
            "type": "theme"
        },
	{
            "key": "{$2}{#32}Icons        ",
            "type": "icons"
        },
	{
            "key": "{$2}{#32}Font         ",
            "type": "font"
        },
	{
            "key": "{$2}{#32}Cursor       ",
            "type": "cursor"
        },
  {
            "key": "{$2}{#32}Terminal     ",
            "type": "terminal"
        },
	{
            "key": "{$2}{#32}TerminalFont ",
            "type": "terminalfont"
        },
	{
            "key": "{$2}{#32}CPU          ",
            "type": "cpu",
            "temp": true
        },       
	{
            "key": "{$2}{#32}CPUCache     ",
            "type": "cpucache"
        },
	{
            "key": "{$2}{#32}CPUUsage     ",
            "type": "cpuusage"
        },
	{
            "key": "{$2}{#32}GPU          ",
            "type": "gpu",
            "temp": true
        },
        {
            "key": "{$2}{#32}Memory       ",
            "type": "memory"
        },
        {
            "key": "{$2}{#32}Disk         ",
            "type": "disk",
            "folders": "/"
        },
     //    {
	    // "key": "{$2}{#32}Network      ",
     //        "type": "publicip",
     //        "timeout": 1000
     //    },
        {
	    "key": "{$2}{#32}PhysicalDisk ",
            "type": "physicaldisk",
            "temp": true
        },
        {
            "format": "{#1}{#keys}┣{$3}┫",
            "type": "custom"
        },
        {
            "type": "custom",
            "format": "{$2}    {#90}████    {#31}████    {#32}████    {#33}████    {#34}████    {#35}████    {#36}████    {#37}████    {#38}████    {#39}████"
        },
	{
            "format": "{#1}{#keys}┗{$1}┛",
            "type": "custom"
	}
    ]
}
